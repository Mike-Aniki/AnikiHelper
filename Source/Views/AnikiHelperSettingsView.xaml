<UserControl x:Class="AnikiHelper.AnikiHelperSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignWidth="639"
             d:DesignHeight="399">

    <UserControl.Resources>

        <SolidColorBrush x:Key="Surface1Brush" Color="#05FFFFFF"/>

        <!-- Borders / separators -->
        <SolidColorBrush x:Key="BorderBrushSoft" Color="#26FFFFFF"/>
        <SolidColorBrush x:Key="BorderBrushHover" Color="#3DFFFFFF"/>
        <SolidColorBrush x:Key="SeparatorBrush" Color="#1FFFFFFF"/>

        <!-- Text -->
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#B3B3B3"/>
        <SolidColorBrush x:Key="TextMutedBrush" Color="#8A8A8A"/>

        <!-- Single accent (keep your identity here) -->
        <SolidColorBrush x:Key="AccentBrush" Color="#FFB37AFF"/>

        <!-- Cards -->
        <Style x:Key="SectionCard" TargetType="Border">
            <Setter Property="Margin" Value="0,12,0,0"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="{StaticResource Surface1Brush}"/>
            <Setter Property="Padding" Value="12"/>
            <!-- Shadow: très soft -->
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="1" Opacity="0.18"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section header inside card -->
        <Style x:Key="SectionHeaderBar" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="SectionHeaderTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,8,0,2"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="SectionDescription" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="SectionSeparator" TargetType="Border">
            <Setter Property="Height" Value="1"/>
            <Setter Property="Background" Value="{StaticResource SeparatorBrush}"/>
            <Setter Property="Margin" Value="0,12,0,12"/>
        </Style>

        <Style x:Key="SmallNoteText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Buttons: flat clean -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#1FFFFFFF"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10"
                            SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="8,2"
                                          RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2AFFFFFF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource BorderBrushHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#14FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>




    <Grid Margin="16,12,16,16">
        <TabControl>

            <!-- ========== GENERAL ========== -->
            <TabItem Header="General" ToolTip="General">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">

                    <StackPanel Margin="0,0,0,16">

                        <!-- Header -->
                        <Border CornerRadius="14"
                            BorderBrush="Transparent"
                            BorderThickness="1"
                            Background="Transparent"
                            Padding="14"
                            Margin="0,0,0,10">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="{DynamicResource AppTitle}"
                                       FontWeight="Bold"
                                       FontSize="24"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       HorizontalAlignment="Center"/>

                                <TextBlock Text="{DynamicResource AppSubtitle}"
                                       FontSize="14"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,2,0,6"
                                       TextWrapping="Wrap"/>

                                
                            </StackPanel>
                        </Border>

                        <Border Height="1"
        Background="{StaticResource SeparatorBrush}"
        Margin="0,6,0,10"/>

                        <!-- ========= LIBRARY STATS ========= -->
                        <Border Style="{StaticResource SectionCard}">
                            <StackPanel>

                                <Border Style="{StaticResource SectionHeaderBar}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0"
                                            Background="{StaticResource AccentBrush}"
                                            CornerRadius="2"
                                            Margin="0,2,8,2"/>

                                        <TextBlock Grid.Column="1" 
                                               Style="{StaticResource SectionHeaderTitle}"
                                               Text="{DynamicResource GroupLibraryStats}"/>
                                    </Grid>
                                </Border>

                                <StackPanel Margin="12,10,12,12">

                                    <TextBlock Text="{DynamicResource StatsHelp}"
                                           Foreground="White"
                                           Margin="0,0,0,8"
                                           TextWrapping="Wrap"/>

                                    <CheckBox Content="{DynamicResource IncludeHidden}"
                                          IsChecked="{Binding Settings.IncludeHidden}"
                                          Margin="0,0,0,6"/>

                                    <TextBlock Text="{DynamicResource AutoUpdate}"
                                           Style="{StaticResource SmallNoteText}"/>

                                    <Border Style="{StaticResource SectionSeparator}"/>

                                    <WrapPanel>
                                        <TextBlock Text="{DynamicResource PreviewTotal}"/>
                                        <TextBlock Text="{Binding Settings.TotalCount}"
                                               FontWeight="Bold"
                                               Margin="6,0,0,0"/>

                                        <TextBlock Margin="16,0,0,0"
                                               Text="{DynamicResource Installed}"/>
                                        <TextBlock Text="{Binding Settings.InstalledCount}"
                                               FontWeight="Bold"
                                               Margin="6,0,0,0"/>

                                        <TextBlock Margin="16,0,0,0"
                                               Text="{DynamicResource NotInstalled}"/>
                                        <TextBlock Text="{Binding Settings.NotInstalledCount}"
                                               FontWeight="Bold"
                                               Margin="6,0,0,0"/>
                                    </WrapPanel>

                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- ========= MONTHLY TRACKING ========= -->
                        <Border Style="{StaticResource SectionCard}">
                            <StackPanel>

                                <Border Style="{StaticResource SectionHeaderBar}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0"
                                            Background="{StaticResource AccentBrush}"
                                            CornerRadius="2"
                                            Margin="0,2,8,2"/>

                                        <TextBlock Grid.Column="1"
                                               Style="{StaticResource SectionHeaderTitle}"
                                               Text="{DynamicResource GroupMonthly}"/>
                                    </Grid>
                                </Border>

                                <StackPanel Margin="12,10,12,12">

                                    <TextBlock Text="{DynamicResource MonthlyHelp}"
                                           Foreground="White"
                                           Margin="0,0,0,8"
                                           TextWrapping="Wrap"/>

                                    <TextBlock Text="{DynamicResource CurrentMonthData}"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           Margin="0,0,0,8"/>

                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="{DynamicResource ResetBtn}"
                                            Style="{StaticResource PrimaryButton}"
                                            Click="ResetSnapshot_Click"
                                            ToolTip="{DynamicResource ResetBtnTooltip}"/>

                                        <TextBlock Text="{Binding Settings.SnapshotDateString}"
                                               VerticalAlignment="Center"
                                               Margin="10,0,0,0"
                                               FontWeight="Light"
                                               ToolTip="{DynamicResource SnapshotTooltip}"/>
                                    </StackPanel>

                                    <TextBlock Text="{DynamicResource ResetBtntip}"
                                           Style="{StaticResource SmallNoteText}"/>

                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- ========= DYNAMIC COLORS ========= -->
                        <Border Style="{StaticResource SectionCard}">
                            <StackPanel>

                                <Border Style="{StaticResource SectionHeaderBar}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0"
                                            Background="{StaticResource AccentBrush}"
                                            CornerRadius="2"
                                            Margin="0,2,8,2"/>

                                        <TextBlock Grid.Column="1"
                                               Style="{StaticResource SectionHeaderTitle}"
                                               Text="{DynamicResource GroupDynColors}"/>
                                    </Grid>
                                </Border>

                                <StackPanel Margin="12,10,12,12">

                                    <TextBlock Text="{DynamicResource L_DynAutoPrecache_Title}"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           Margin="0,4,0,4"
                                           TextWrapping="Wrap"/>

                                    <TextBlock Text="{DynamicResource L_EnableDynamicAutoPrecache_Desc}"
                                           Style="{StaticResource SectionDescription}"
                                           Margin="0,4,0,4"
                                           TextWrapping="Wrap"/>

                                    <CheckBox Content="{DynamicResource L_EnableDynamicAutoPrecache}"
                                          IsChecked="{Binding Settings.DynamicAutoPrecacheUserEnabled}"
                                          ToolTip="{DynamicResource L_EnableDynamicAutoPrecache_Tooltip}"
                                          Margin="0,4,0,4"/>

                                    <TextBlock Text="{DynamicResource L_EnableDynamicAutoPrecache_Note}"
                                           Style="{StaticResource SmallNoteText}"/>

                                    <Border Style="{StaticResource SectionSeparator}"/>

                                    <TextBlock Text="{DynamicResource L_CacheManagement_Title}"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           Margin="0,0,0,4"
                                           TextWrapping="Wrap"/>

                                    <TextBlock Text="{DynamicResource L_ClearColorCache_Desc}"
                                           Style="{StaticResource SectionDescription}"
                                           Margin="0,4,0,4"
                                           TextWrapping="Wrap"/>

                                    <Button Content="{DynamicResource L_ClearColorCache}"
                                        Margin="0,4,0,4"
                                        Style="{StaticResource PrimaryButton}"
                                        Click="ClearColorCache_Click"
                                        ToolTip="{DynamicResource L_ClearColorCache_Tooltip}"/>

                                    <TextBlock Text="{DynamicResource DynColors_Help}"
                                           Style="{StaticResource SmallNoteText}"/>

                                </StackPanel>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>




    <!-- ========= ACHIEVEMENT INTEGRATION ========= -->
            <TabItem Header="{DynamicResource GroupAchievementIntegration}">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">

            <StackPanel Margin="0,0,0,16">

                        <!-- Header -->
                        <Border CornerRadius="14"
                    BorderBrush="Transparent"
                    BorderThickness="1"
                    Background="Transparent"
                    Padding="14"
                    Margin="0,0,0,10">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="{DynamicResource AppTitle}"
                               FontWeight="Bold"
                               FontSize="24"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"/>

                                <TextBlock Text="{DynamicResource AppSubtitle}"
                               FontSize="14"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,2,0,6"
                               TextWrapping="Wrap"/>


                            </StackPanel>
                        </Border>

                        <Border Height="1"
Background="{StaticResource SeparatorBrush}"
Margin="0,6,0,10"/>

                        <Border Style="{StaticResource SectionCard}">
                    <StackPanel>

                        <Border Style="{StaticResource SectionHeaderBar}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                    Background="{StaticResource AccentBrush}"
                                    CornerRadius="2"
                                    Margin="0,2,8,2"/>

                                <TextBlock Grid.Column="1" 
                                       Style="{StaticResource SectionHeaderTitle}"
                                       Text="{DynamicResource GroupAchievementIntegration}"/>
                            </Grid>
                        </Border>

                        <StackPanel Margin="12,10,12,12">

                            <TextBlock Text="{DynamicResource AchievementIntegration_Help}"
                                   Foreground="White"
                                   Margin="0,0,0,8"
                                   TextWrapping="Wrap"/>

                            <TextBlock Text="{DynamicResource AchievementIntegration_ModeLabel}"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,4"/>

                            <ComboBox Name="AchievementIntegrationCombo"
                                  HorizontalAlignment="Stretch"
                                  Margin="0,4,0,8"
                                  Padding="6,4">
                                <ComboBoxItem Content="{DynamicResource AchievementIntegration_ModePlayniteAchievements}" Tag="0"/>
                                <ComboBoxItem Content="{DynamicResource AchievementIntegration_ModeSuccessStory}" Tag="1"/>
                            </ComboBox>

                            <TextBlock Text="{DynamicResource AchievementIntegration_ModeDesc}"
                                   Style="{StaticResource SmallNoteText}"/>

                        </StackPanel>

                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </TabItem>


        <!-- ========= STEAM FEATURES ========= -->
            <TabItem Header="{DynamicResource GroupSteamFeatures}">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">

                <StackPanel Margin="0,0,0,16">

                        <!-- Header -->
                        <Border CornerRadius="14"
                    BorderBrush="Transparent"
                    BorderThickness="1"
                    Background="Transparent"
                    Padding="14"
                    Margin="0,0,0,10">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="{DynamicResource AppTitle}"
                               FontWeight="Bold"
                               FontSize="24"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"/>

                                <TextBlock Text="{DynamicResource AppSubtitle}"
                               FontSize="14"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,2,0,6"
                               TextWrapping="Wrap"/>


                            </StackPanel>
                        </Border>

                        <Border Height="1"
Background="{StaticResource SeparatorBrush}"
Margin="0,6,0,10"/>

                        <Border Style="{StaticResource SectionCard}">
                        <StackPanel>

                            <Border Style="{StaticResource SectionHeaderBar}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0"
                                    Background="{StaticResource AccentBrush}"
                                    CornerRadius="2"
                                    Margin="0,2,8,2"/>

                                    <TextBlock Grid.Column="1"
                                       Style="{StaticResource SectionHeaderTitle}"
                                       Text="{DynamicResource GroupSteamFeatures}"/>
                                </Grid>
                            </Border>

                            <StackPanel Margin="12,10,12,12">

                                <TextBlock Text="{DynamicResource SteamUpdates_Title}"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   TextWrapping="Wrap"/>

                                <TextBlock Text="{DynamicResource SteamUpdates_Desc}"
                                   Style="{StaticResource SectionDescription}"
                                   Margin="0,4,0,8"/>

                                <CheckBox Content="{DynamicResource SteamUpdates_Enable}"
                                  IsChecked="{Binding Settings.SteamUpdatesScanEnabled}"
                                  Margin="0,4,0,8"/>

                                <TextBlock Text="{DynamicResource SteamUpdates_Enable_Help}"
                                   Style="{StaticResource SmallNoteText}"
                                   Margin="0,4,0,8"/>

                                <Border Style="{StaticResource SectionSeparator}"/>

                                <TextBlock Text="{DynamicResource SteamInitCache_ProgressTitle}"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   TextWrapping="Wrap"/>

                                <TextBlock Text="{DynamicResource SteamInitCache_ProgressDesc}"
                                   Style="{StaticResource SectionDescription}"
                                   Margin="0,4,0,8"/>

                                <StackPanel Orientation="Horizontal">
                                    <Button Content="{DynamicResource SteamInitCache}"
                                    Style="{StaticResource PrimaryButton}"
                                    Margin="0,4,0,8"
                                    Click="InitializeSteamCache_Click"
                                    ToolTip="{DynamicResource SteamInitCache_Tooltip}"/>

                                    <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        Margin="10,0,0,0">
                                        <TextBlock Text="{DynamicResource LOCSteamLastScan}"
                                           FontWeight="Light"
                                           VerticalAlignment="Center"
                                           Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding Settings.LastSteamRecentCheckDisplay}"
                                           FontWeight="Light"
                                           VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>

                                <TextBlock Text="{DynamicResource SteamInitCache_ProgressNote}"
                                   Style="{StaticResource SmallNoteText}"
                                   Margin="0,4,0,8"/>

                                <Border Style="{StaticResource SectionSeparator}"/>

                                <TextBlock Text="{DynamicResource SteamPlayers_Title}"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   TextWrapping="Wrap"/>

                                <TextBlock Text="{DynamicResource SteamFeatures_Help}"
                                   Style="{StaticResource SectionDescription}"
                                   Margin="0,4,0,8"/>

                                <CheckBox Content="{DynamicResource SteamPlayers_Enable}"
                                  IsChecked="{Binding Settings.SteamPlayerCountEnabled}"
                                  Margin="0,4,0,8"/>

                            </StackPanel>

                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </TabItem>


        <!-- ========= ANIKI NEWS FEATURES ========= -->
            <TabItem Header="{DynamicResource GroupAnikiFeatures}">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">

                <StackPanel Margin="0,0,0,16">

                        <!-- Header -->
                        <Border CornerRadius="14"
                    BorderBrush="Transparent"
                    BorderThickness="1"
                    Background="Transparent"
                    Padding="14"
                    Margin="0,0,0,10">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="{DynamicResource AppTitle}"
                               FontWeight="Bold"
                               FontSize="24"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"/>

                                <TextBlock Text="{DynamicResource AppSubtitle}"
                               FontSize="14"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,2,0,6"
                               TextWrapping="Wrap"/>


                            </StackPanel>
                        </Border>

                        <Border Height="1"
Background="{StaticResource SeparatorBrush}"
Margin="0,6,0,10"/>

                        <Border Style="{StaticResource SectionCard}">
                        <StackPanel>

                            <Border Style="{StaticResource SectionHeaderBar}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0"
                                    Background="{StaticResource AccentBrush}"
                                    CornerRadius="2"
                                    Margin="0,2,8,2"/>

                                    <TextBlock Grid.Column="1"
                                       Style="{StaticResource SectionHeaderTitle}"
                                       Text="{DynamicResource GroupAnikiFeatures}"/>
                                </Grid>
                            </Border>

                            <StackPanel Margin="12,10,12,12">

                                <TextBlock Text="{DynamicResource AnikiNews_Title1}"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   TextWrapping="Wrap"/>

                                <TextBlock Text="{DynamicResource NewsScan_Desc}"
                                   Style="{StaticResource SectionDescription}"
                                   Margin="0,4,0,8"/>

                                <CheckBox Content="{DynamicResource NewsScan_Enable}"
                                  IsChecked="{Binding Settings.NewsScanEnabled}"
                                  Margin="0,4,0,8"/>

                                <TextBlock Text="{DynamicResource NewsScan_Enable_Help}"
                                   Style="{StaticResource SmallNoteText}"
                                   Margin="0,4,0,8"/>

                                <Border Style="{StaticResource SectionSeparator}"/>

                                <TextBlock Text="{DynamicResource AnikiNews_Title}"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   TextWrapping="Wrap"/>

                                <TextBlock Text="{DynamicResource AnikiNews_CustomFeed_Desc}"
                                   Style="{StaticResource SectionDescription}"
                                   Margin="0,4,0,8"
                                   TextWrapping="Wrap"/>

                                <TextBox Text="{Binding Settings.SteamNewsCustomFeedUrl, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,4,0,8"
                                 HorizontalAlignment="Stretch"
                                 ToolTip="{DynamicResource AnikiNews_CustomFeed_Tooltip}"/>

                                <TextBlock Text="{DynamicResource AnikiNews_CustomFeed_Help}"
                                   Style="{StaticResource SmallNoteText}"
                                   Margin="0,4,0,8"/>

                                <TextBlock Text="{DynamicResource NewsScan_Enable_Help2}"
                                   Style="{StaticResource SmallNoteText}"
                                   Margin="0,4,0,8"/>

                                <StackPanel Orientation="Horizontal" Margin="0,4,0,8">
                                    <Button Content="{DynamicResource AnikiNews_ClearCache}"
                                    Style="{StaticResource PrimaryButton}"
                                    Click="ClearNewsCache_Click"
                                    ToolTip="{DynamicResource AnikiNews_ClearCache_Tooltip}"/>

                                    <TextBlock Text="{DynamicResource AnikiNews_ClearCache_Note}"
                                       Style="{StaticResource SectionDescription}"
                                       Margin="12,2,0,0"
                                       VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- Exemples -->
                                <TextBlock Text="{DynamicResource AnikiNews_CustomFeed_Help2}"
                                   FontSize="12"
                                   Style="{StaticResource SmallNoteText}"
                                   Margin="0,8,0,2"/>

                                <TextBlock Text="{DynamicResource AnikiNews_CustomFeed_Exemple1}"
                                   Style="{StaticResource SmallNoteText}"
                                   FontSize="12"
                                   Margin="0,4,0,2"/>

                                <TextBlock Text="{DynamicResource AnikiNews_CustomFeed_Exemple2}"
                                   Style="{StaticResource SmallNoteText}"
                                   FontSize="12"
                                   Margin="0,4,0,2"/>

                                <TextBlock Text="{DynamicResource AnikiNews_CustomFeed_Exemple3}"
                                   Style="{StaticResource SmallNoteText}"
                                   FontSize="12"
                                   Margin="0,4,0,2"/>

                                <TextBlock Text="{DynamicResource AnikiNews_CustomFeed_Exemple4}"
                                   Style="{StaticResource SmallNoteText}"
                                   FontSize="12"
                                   Margin="0,4,0,2"/>

                                <TextBlock Text="{DynamicResource AnikiNews_CustomFeed_Exemple5}"
                                   Style="{StaticResource SmallNoteText}"
                                   FontSize="12"
                                   Margin="0,4,0,2"/>

                            </StackPanel>

                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </TabItem>

        </TabControl>
    </Grid>
    
    
</UserControl>