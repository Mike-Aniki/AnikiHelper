<UserControl x:Class="AnikiHelper.AnikiHelperSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignWidth="639"
             d:DesignHeight="399">

    <UserControl.Resources>

        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#10000000"/>
        <SolidColorBrush x:Key="CardBackgroundHoverBrush" Color="#20000000"/>

        <SolidColorBrush x:Key="LibraryAccentBrush" Color="DarkGoldenrod"/>
        <SolidColorBrush x:Key="MonthlyAccentBrush" Color="DarkSlateGray"/>
        <SolidColorBrush x:Key="DynamicAccentBrush" Color="DarkRed"/>
        <SolidColorBrush x:Key="SteamAccentBrush" Color="DarkBlue"/>
        <SolidColorBrush x:Key="NewsAccentBrush" Color="DarkGreen"/>

        <SolidColorBrush x:Key="HeaderAccentBrush" Color="#FFB37AFF"/>

        <LinearGradientBrush x:Key="PrimaryButtonBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FF3A3D45" Offset="0"/>
            <GradientStop Color="#FF2C2F36" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="PrimaryButtonBackgroundHoverBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FF50545F" Offset="0"/>
            <GradientStop Color="#FF3A3E48" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="PrimaryButtonBackgroundPressedBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FF292C33" Offset="0"/>
            <GradientStop Color="#FF1F2228" Offset="1"/>
        </LinearGradientBrush>

        <SolidColorBrush x:Key="PrimaryButtonBorderBrush" Color="#66FFFFFF"/>
        <SolidColorBrush x:Key="PrimaryButtonBorderHoverBrush" Color="#99FFFFFF"/>
        <SolidColorBrush x:Key="PrimaryButtonBorderPressedBrush" Color="#CCFFFFFF"/>
        <SolidColorBrush x:Key="PrimaryButtonForegroundBrush" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="PrimaryButtonForegroundDisabledBrush" Color="#88FFFFFF"/>

        <Style x:Key="SectionCard" TargetType="Border">
            <Setter Property="Margin" Value="0,12,0,0"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderBrush" Value="#30FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000"
                                      BlurRadius="10"
                                      ShadowDepth="1"
                                      Opacity="0.25"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderThickness" Value="2"/>
                    <Setter Property="BorderBrush" Value="#66FFFFFF"/>
                    <Setter Property="Background" Value="{StaticResource CardBackgroundHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="SectionDescription" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#B3B3B3"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="SectionSeparator" TargetType="Border">
            <Setter Property="Height" Value="1"/>
            <Setter Property="Background" Value="#22FFFFFF"/>
            <Setter Property="Margin" Value="0,14,0,12"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource PrimaryButtonForegroundBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="MinWidth" Value="130"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="{StaticResource PrimaryButtonBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryButtonBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="6,2,6,2"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="{StaticResource PrimaryButtonBackgroundHoverBrush}"/>
                                <Setter TargetName="border"
                                        Property="BorderBrush"
                                        Value="{StaticResource PrimaryButtonBorderHoverBrush}"/>
                            </Trigger>

                            <!-- Pressed -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="{StaticResource PrimaryButtonBackgroundPressedBrush}"/>
                                <Setter TargetName="border"
                                        Property="BorderBrush"
                                        Value="{StaticResource PrimaryButtonBorderPressedBrush}"/>
                            </Trigger>

                            <!-- Focus -->
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border"
                                        Property="BorderBrush"
                                        Value="{StaticResource HeaderAccentBrush}"/>
                                <Setter TargetName="border"
                                        Property="BorderThickness"
                                        Value="2"/>
                            </Trigger>

                            <!-- Désactivé -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                <Setter Property="Foreground"
                                        Value="{StaticResource PrimaryButtonForegroundDisabledBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SmallNoteText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
        </Style>

    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled" >

        <StackPanel Margin="16,12,16,16" Orientation="Vertical">

            <Border CornerRadius="10"
                    BorderBrush="#30FFFFFF"
                    BorderThickness="1"
                    Padding="12"
                    Margin="0,0,0,8">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#202028" Offset="0"/>
                        <GradientStop Color="#15151A" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{DynamicResource AppTitle}"
                               FontWeight="Bold"
                               FontSize="24"
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{DynamicResource AppSubtitle}"
                               FontSize="13"
                               Foreground="#B3B3B3"
                               HorizontalAlignment="Center"
                               Margin="0,2,0,6"
                               TextWrapping="Wrap"/>

                    <Border Height="2"
                            Width="90"
                            CornerRadius="1"
                            Background="{StaticResource HeaderAccentBrush}"
                            HorizontalAlignment="Center"
                            Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- ========= LIBRARY STATS ========= -->
            <Border Style="{StaticResource SectionCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            Background="{StaticResource LibraryAccentBrush}"
                            CornerRadius="10,10,0,0"
                            Padding="12,4">
                        <TextBlock Text="{DynamicResource GroupLibraryStats}"
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   FontSize="16"
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Row="1" Margin="12,10,12,12">

                        <TextBlock Text="{DynamicResource StatsHelp}"
                                   Foreground="White"
                                   Margin="0,0,0,8"
                                   TextWrapping="Wrap"/>

                        <CheckBox Content="{DynamicResource IncludeHidden}"
                                  IsChecked="{Binding Settings.IncludeHidden}"
                                  Margin="0,0,0,6"/>

                        <TextBlock Text="{DynamicResource AutoUpdate}"
                                   Style="{StaticResource SmallNoteText}"/>

                        <Border Style="{StaticResource SectionSeparator}"/>

                        <WrapPanel>
                            <TextBlock Text="{DynamicResource PreviewTotal}"/>
                            <TextBlock Text="{Binding Settings.TotalCount}"
                                       FontWeight="Bold"
                                       Margin="6,0,0,0"/>

                            <TextBlock Margin="16,0,0,0"
                                       Text="{DynamicResource Installed}"/>
                            <TextBlock Text="{Binding Settings.InstalledCount}"
                                       FontWeight="Bold"
                                       Margin="6,0,0,0"/>

                            <TextBlock Margin="16,0,0,0"
                                       Text="{DynamicResource NotInstalled}"/>
                            <TextBlock Text="{Binding Settings.NotInstalledCount}"
                                       FontWeight="Bold"
                                       Margin="6,0,0,0"/>
                        </WrapPanel>

                    </StackPanel>
                </Grid>
            </Border>

            <!-- ========= MONTHLY TRACKING ========= -->
            <Border Style="{StaticResource SectionCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            Background="{StaticResource MonthlyAccentBrush}"
                            CornerRadius="10,10,0,0"
                            Padding="12,4">
                        <TextBlock Text="{DynamicResource GroupMonthly}"
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   FontSize="16"
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Row="1" Margin="12,10,12,12">

                        <TextBlock Text="{DynamicResource MonthlyHelp}"
                                   Foreground="White"
                                   Margin="0,0,0,8"
                                   TextWrapping="Wrap"/>

                        <TextBlock Text="{DynamicResource CurrentMonthData}"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,8"/>

                        <StackPanel Orientation="Horizontal">
                            <Button Content="{DynamicResource ResetBtn}"
                                    Style="{StaticResource PrimaryButton}"
                                    Click="ResetSnapshot_Click"
                                    ToolTip="{DynamicResource ResetBtnTooltip}"/>

                            <TextBlock Text="{Binding Settings.SnapshotDateString}"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"
                                       FontWeight="Light"
                                       ToolTip="{DynamicResource SnapshotTooltip}"/>
                        </StackPanel>

                        <TextBlock Text="{DynamicResource ResetBtntip}"
                                   Style="{StaticResource SmallNoteText}"/>

                    </StackPanel>
                </Grid>
            </Border>

            <!-- ========= DYNAMIC COLORS ========= -->
            <Border Style="{StaticResource SectionCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            Background="{StaticResource DynamicAccentBrush}"
                            CornerRadius="10,10,0,0"
                            Padding="12,4">
                        <TextBlock Text="{DynamicResource GroupDynColors}"
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   FontSize="16"
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Row="1" Margin="12,10,12,12">

                        <TextBlock Text="{DynamicResource L_DynAutoPrecache_Title}"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,4,0,4"
                                   TextWrapping="Wrap"/>

                        <TextBlock Text="{DynamicResource L_EnableDynamicAutoPrecache_Desc}"
                                   Style="{StaticResource SectionDescription}"
                                   Margin="0,4,0,4"
                                   TextWrapping="Wrap"/>

                        <CheckBox Content="{DynamicResource L_EnableDynamicAutoPrecache}"
                                  IsChecked="{Binding Settings.DynamicAutoPrecacheUserEnabled}"
                                  ToolTip="{DynamicResource L_EnableDynamicAutoPrecache_Tooltip}"
                                  Margin="0,4,0,4"/>

                        <TextBlock Text="{DynamicResource L_EnableDynamicAutoPrecache_Note}"
                                   Style="{StaticResource SmallNoteText}"/>

                        <Border Style="{StaticResource SectionSeparator}"/>

                        <TextBlock Text="{DynamicResource L_CacheManagement_Title}"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,4"
                                   TextWrapping="Wrap"/>

                        <TextBlock Text="{DynamicResource L_ClearColorCache_Desc}"
                                   Style="{StaticResource SectionDescription}"
                                   Margin="0,4,0,4"
                                   TextWrapping="Wrap"/>

                        <Button Content="{DynamicResource L_ClearColorCache}" Margin="0,4,0,4"
                                Style="{StaticResource PrimaryButton}"
                                Click="ClearColorCache_Click"
                                ToolTip="{DynamicResource L_ClearColorCache_Tooltip}"/>

                        <TextBlock Text="{DynamicResource DynColors_Help}"
                                   Style="{StaticResource SmallNoteText}"/>

                    </StackPanel>
                </Grid>
            </Border>

            <!-- ========= STEAM FEATURES ========= -->
            <Border Style="{StaticResource SectionCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            Background="{StaticResource SteamAccentBrush}"
                            CornerRadius="10,10,0,0"
                            Padding="12,4">
                        <TextBlock Text="{DynamicResource GroupSteamFeatures}"
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   FontSize="16"
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Row="1" Margin="12,10,12,12">

                        <TextBlock Text="{DynamicResource SteamUpdates_Title}"
                               FontWeight="SemiBold"
                               Foreground="White"
                               TextWrapping="Wrap"/>

                        <TextBlock Text="{DynamicResource SteamUpdates_Desc}"
                               Style="{StaticResource SectionDescription}"
                               Margin="0,4,0,8"/>
                        
                        <CheckBox Content="{DynamicResource SteamUpdates_Enable}"
                                IsChecked="{Binding Settings.SteamUpdatesScanEnabled}"
                                Margin="0,4,0,8"/>

                        <TextBlock Text="{DynamicResource SteamUpdates_Enable_Help}"
                                 Style="{StaticResource SmallNoteText}"
                                 Margin="0,4,0,8"/>

                        <Border Style="{StaticResource SectionSeparator}"/>

                        <TextBlock Text="{DynamicResource SteamInitCache_ProgressTitle}"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   TextWrapping="Wrap"/>

                        <TextBlock Text="{DynamicResource SteamInitCache_ProgressDesc}"
                                   Style="{StaticResource SectionDescription}"
                                   Margin="0,4,0,8"/>

                        <StackPanel Orientation="Horizontal">
                            <Button Content="{DynamicResource SteamInitCache}"
                                    Style="{StaticResource PrimaryButton}"
                                    Margin="0,4,0,8"
                                    Click="InitializeSteamCache_Click"
                                    ToolTip="{DynamicResource SteamInitCache_Tooltip}"/>

                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        Margin="10,0,0,0">
                                <TextBlock Text="{DynamicResource LOCSteamLastScan}"
                                           FontWeight="Light"
                                           VerticalAlignment="Center"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding Settings.LastSteamRecentCheckDisplay}"
                                           FontWeight="Light"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Text="{DynamicResource SteamInitCache_ProgressNote}"
                                   Style="{StaticResource SmallNoteText}"
                                   Margin="0,4,0,8"/>

                        <Border Style="{StaticResource SectionSeparator}"/>

                        <TextBlock Text="{DynamicResource SteamPlayers_Title}"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   TextWrapping="Wrap"/>

                        <TextBlock Text="{DynamicResource SteamFeatures_Help}"
                                   Style="{StaticResource SectionDescription}"
                                   Margin="0,4,0,8"/>

                        <CheckBox Content="{DynamicResource SteamPlayers_Enable}"
                                  IsChecked="{Binding Settings.SteamPlayerCountEnabled}"
                                  Margin="0,4,0,8"/>

                    </StackPanel>
                </Grid>
            </Border>

            <!-- ========= ANIKI NEWS FEATURES ========= -->
            <Border Style="{StaticResource SectionCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            Background="{StaticResource NewsAccentBrush}"
                            CornerRadius="10,10,0,0"
                            Padding="12,4">
                        <TextBlock Text="{DynamicResource GroupAnikiFeatures}"
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   FontSize="16"
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Row="1" Margin="12,10,12,12">

                        <TextBlock Text="{DynamicResource AnikiNews_Title1}"
                                    FontWeight="SemiBold" 
                                    Foreground="White"
                                    TextWrapping="Wrap"/>

                        <TextBlock Text="{DynamicResource NewsScan_Desc}"
                                   Style="{StaticResource SectionDescription}"
                                   Margin="0,4,0,8"/>

                        <CheckBox Content="{DynamicResource NewsScan_Enable}"
                                   IsChecked="{Binding Settings.NewsScanEnabled}"
                                   Margin="0,4,0,8"/>

                        <TextBlock Text="{DynamicResource NewsScan_Enable_Help}"
                                    Style="{StaticResource SmallNoteText}"
                                    Margin="0,4,0,8"/>

                        <Border Style="{StaticResource SectionSeparator}"/>

                        <TextBlock Text="{DynamicResource AnikiNews_Title}" 
                                   FontWeight="SemiBold" 
                                   Foreground="White"
                                   TextWrapping="Wrap"/>


                        <TextBlock Text="{DynamicResource AnikiNews_CustomFeed_Desc}"
                                   Style="{StaticResource SectionDescription}"
                                   Margin="0,4,0,8"
                                   TextWrapping="Wrap"/>

                        <TextBox Text="{Binding Settings.SteamNewsCustomFeedUrl, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,4,0,8"
                                 HorizontalAlignment="Stretch"
                                 ToolTip="{DynamicResource AnikiNews_CustomFeed_Tooltip}"/>

                        <TextBlock Text="{DynamicResource AnikiNews_CustomFeed_Help}"
                                   Style="{StaticResource SmallNoteText}"
                                   Margin="0,4,0,8"/>

                        <TextBlock Text="{DynamicResource NewsScan_Enable_Help2}"
                                   Style="{StaticResource SmallNoteText}"
                                   Margin="0,4,0,8"/>

                        <StackPanel Orientation="Horizontal" Margin="0,4,0,8">
                            <Button Content="{DynamicResource AnikiNews_ClearCache}"
                                    Style="{StaticResource PrimaryButton}"
                                    Click="ClearNewsCache_Click"
                                    ToolTip="{DynamicResource AnikiNews_ClearCache_Tooltip}"/>

                            <TextBlock Text="{DynamicResource AnikiNews_ClearCache_Note}"
                                       Style="{StaticResource SectionDescription}"
                                       Margin="12,2,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Exemples -->
                        <TextBlock Text="{DynamicResource AnikiNews_CustomFeed_Help2}"
                                   FontSize="12"
                                   Style="{StaticResource SmallNoteText}"
                                   Margin="0,8,0,2"/>

                        <TextBlock Text="{DynamicResource AnikiNews_CustomFeed_Exemple1}"
                                   Style="{StaticResource SmallNoteText}"
                                   FontSize="12"
                                   Margin="0,4,0,2"/>
                        <TextBlock Text="{DynamicResource AnikiNews_CustomFeed_Exemple2}"
                                   Style="{StaticResource SmallNoteText}"
                                   FontSize="12"
                                   Margin="0,4,0,2"/>
                        <TextBlock Text="{DynamicResource AnikiNews_CustomFeed_Exemple3}"
                                   Style="{StaticResource SmallNoteText}"
                                   FontSize="12"
                                   Margin="0,4,0,2"/>
                        <TextBlock Text="{DynamicResource AnikiNews_CustomFeed_Exemple4}"
                                   Style="{StaticResource SmallNoteText}"
                                   FontSize="12"
                                   Margin="0,4,0,2"/>
                        <TextBlock Text="{DynamicResource AnikiNews_CustomFeed_Exemple5}"
                                   Style="{StaticResource SmallNoteText}"
                                   FontSize="12"
                                   Margin="0,4,0,2"/>

                    </StackPanel>
                </Grid>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
